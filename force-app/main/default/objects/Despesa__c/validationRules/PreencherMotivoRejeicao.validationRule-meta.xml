<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PreencherMotivoRejeicao</fullName>
    <active>true</active>
    <errorConditionFormula>AND (
ISPICKVAL( Status__c , &quot;Rejeitado&quot;),
ISBLANK( Motivo_da_Rejeicao__c)
)</errorConditionFormula>
    <errorMessage>Se o reembolso foi rejeitado, preencher campo do Motivo da Rejeição.</errorMessage>
</ValidationRule>
